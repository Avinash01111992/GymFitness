<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e90ff"
    tools:context="com.example.suma.physicalfitness.DashBoard">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

        <TextView
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_width="300dp"
            android:text="Regiser your customers and trainers by clicking the below  button"
            android:layout_height="wrap_content"
            />

        <Button
            android:layout_width="300dp"
            android:layout_marginTop="10dp"
            android:id="@+id/register_tranr_btn"
            android:background="@drawable/btnshape"
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:text="Registration"/>

        <Button
            android:layout_width="300dp"
            android:layout_marginTop="10dp"
            android:id="@+id/mng_btn"
            android:background="@drawable/btnshape"
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:text="Manage Trainers"/>


    </LinearLayout>


</LinearLayout>
