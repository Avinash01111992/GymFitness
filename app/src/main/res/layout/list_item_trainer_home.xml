<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_parent_contacts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:elevation="3dp">

    <RelativeLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:background="@android:color/white"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/level_module_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/usericon" />

        <TextView
            android:id="@+id/text_module_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/level_module_image"
            android:layout_toStartOf="@+id/image_module_icon"
            android:maxLines="2"
            android:text="User Name"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/image_module_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/arrow_icon" />
    </RelativeLayout>

</android.support.v7.widget.CardView>